<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatWindowActivity">

    <com.stfalcon.chatkit.messages.MessagesList
        android:id="@+id/chatList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input"
        app:incomingDefaultBubbleColor="#ddd"
        app:outcomingTimeTextColor="#fff"
        app:incomingTimeTextColor="#484444"
        />


    <com.stfalcon.chatkit.messages.MessageInput
        android:background="#ddd"
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:inputButtonIcon="@drawable/ic_send"
        app:inputHintColor="#484444"
        app:inputHint="Escribe un mensaje"/>

</RelativeLayout>